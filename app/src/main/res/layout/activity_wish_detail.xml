<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wish_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1F1F1F"
    tools:context="mywishlist.nexmii.com.mywishlist.WishDetail">


    <TextView
        android:id="@+id/textWish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/record"
        android:text="''The wish will go here''"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/record"
        android:layout_centerHorizontal="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textTitle"
        android:text="the date"
        android:textAlignment="center"
        android:textColor="#4990E2"
        android:textSize="17sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!-- deleteButton  resCompleted-->
    <ImageButton
        android:id="@+id/resCompleted"
        android:src="@drawable/achievedicon"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/deleteButton"
        android:background="#1F1F1F"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:src="@drawable/killicon"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="#1F1F1F"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/textTitle"
            android:layout_marginTop="42dp"
            android:text="Title goes here"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


</RelativeLayout>
